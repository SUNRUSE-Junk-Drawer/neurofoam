{
  "name": "@neurofoam/build",
  "description": "This is the build tool for Neurofoam.",
  "version": "0.0.0",
  "engines": {
    "node": ">=12.13.0"
  },
  "engineStrict": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/jameswilddev/neurofoam"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jasmine": "3.5.10",
    "@types/node": "12.12.34",
    "del-cli": "3.0.0",
    "jasmine": "3.5.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.0.1",
    "typescript": "3.8.3"
  },
  "scripts": {
    "buildClean": "del-cli '**/*.js' '**/*.d.ts' '!**/node_modules/**/*'",
    "buildToolsTypeScript": "tsc --project tools.tsconfig.json",
    "buildToolsRun": "node build",
    "buildTypeScript": "tsc --project packages.tsconfig.json",
    "buildNyc": "nyc --check-coverage --all --exclude \"**/*-tests.*\" --exclude \"build/**/*\" --exclude \"publish/**/*\" --lines 100 --functions 100 --branches 100 --statements 100 npm run-script buildJasmine",
    "buildJasmine": "jasmine --config=jasmine.json",
    "buildToolsPublish": "node publish",
    "test": "npm-run-all buildClean buildToolsTypeScript buildToolsRun buildTypeScript buildNyc"
  }
}
